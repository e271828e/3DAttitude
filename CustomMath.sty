\newcommand{\qprj}[2]{\quat{#1}^{#2}}
\newcommand{\cRotQ}[3]{\csubprj{\rotq}{#2}{#1}{#3}} %component representation of a rotation (1: original, 2: target)
\newcommand{\reRotQ}[2]{\cRotQ{{#1}}{{#2}}{0}} 
